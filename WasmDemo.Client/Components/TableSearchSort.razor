<div class="container pt-3">
    <div class="row">
        <div class="col-lg-9 col-sm-8 col-12">
            <span><b>@Title</b></span><br />
            <input type="text" class="txt-search mb-2" placeholder="Search Products" @bind-value="InputText" @bind-value:event="oninput" />
            <span class="item-count ml-2 fw-bold">@_rows.Where(x => x.Show).Count() items</span>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <table class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        @foreach (string header in ColumnNamesOrdered)
                        {
                            <th class="bg-secondary text-white" style="cursor:pointer" @onclick="() => Sort(header)">
                                <span class="d-inline-block mr-2">@header</span>
                                @if (header == _sortRowActive)
                                {
                                    if (_sortOrder == SortOrder.ASC) { <i class="bi bi-arrow-up text-white"></i> }
                                    else { <i class="bi bi-arrow-down text-white"></i> }
                                }
                            </th>
                        }
                    </tr>
                </thead>
                <tbody>
                    @foreach (Row row in _rows)
                    {
                        if (row.Show)
                        {
                            <tr>
                                @foreach (string cellValue in row.RowValues)
                                {
                                    <td>@cellValue</td>
                                }
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
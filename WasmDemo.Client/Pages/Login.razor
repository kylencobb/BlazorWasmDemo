@page "/login"

<div class="container-fluid">
    <div class="col-12 col-sm-6 col-lg-4 mx-auto">
        <div class="card mt-5">
            <div class="card-header text-white" style="background-color: #3585cc">
                <h2 class="mb-0 fs-3">Login</h2>
            </div>
            <div class="card-body">
                <EditForm Model="_loginModel" OnValidSubmit="HandleLogin">
                    <p>As long as a value is provided for Username and Password, you will be automatically authenticated.</p>

                    <DataAnnotationsValidator />

                    <div class="form-group">
                        <label for="username">Username</label><span class="text-danger">*</span>
                        <InputText id="username" class="form-control" @bind-Value="_loginModel.Username" />
                        <ValidationMessage For="@(() => _loginModel.Username)" />
                    </div>

                    <div class="form-group mt-3">
                        <label for="password">Password</label><span class="text-danger">*</span>
                        <InputText id="password" type="password" class="form-control" @bind-Value="_loginModel.Password" />
                        <ValidationMessage For="@(() => _loginModel.Password)" />
                    </div>

                    <button type="submit" class="btn btn-secondary mt-3">Submit</button>
                </EditForm>
            </div>
        </div>
    </div>
</div>